<div class="jumbotron">
  <h2><%= gettext "Stay fit with Caren" %></h2>
  <p class="lead">With this awesome client your data<br />gets synced with Caren, how great is that!</p>
</div>

<%= if @current_user do %>
  <h2>Welcome, <%= @current_user %></h2>

  <%= if String.contains? @current_user, "Fitbit" do %>
    <%= link("Sync with Fitbit", to: "/sync", class: "btn btn-warning") %>
  <% else %>
    <%= link("Sign in with Fitbit", to: "/auth/fitbit", class: "btn btn-info") %>
  <% end %>

  <%= link("Logout", to: fitbit_auth_path(@conn, :delete), method: :delete, class: "btn btn-danger logout", data: [confirm: "Are you sure?"]) %>
<% else %>
  <%= link("Sign in with Caren", to: "/auth/caren", class: "btn btn-success") %>
<% end %>
